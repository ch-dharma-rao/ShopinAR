<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    Login and Register Theme-->
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/btn_background_blue</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--       <item name="hintTextAppearance">@style/HintText</item>-->
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialDrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/blue_end</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/common_google_signin_btn_text_dark</item>
        <item name="titleTextColor">@color/blue_light</item>

        <!-- MaterialDrawer specific values -->
        <item name="android:textColorSecondary">@color/blue_end</item>
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/blue_dark</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/blue_dark</item>
        <item name="material_drawer_hint_text">@color/blue_light</item>
        <item name="material_drawer_divider">@color/blue_end</item>
        <item name="material_drawer_selected">@color/blue_light</item>
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text"> @color/blue_dark</item>
<!--        -->

    </style>

    <!-- Product Detail theme. -->
    <style name="ProductDetail" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1e272e</item>
        <item name="colorPrimaryDark">#ffa801</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="homegridcard">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="cardElevation">@dimen/card_album_radius</item>

    </style>


    <style name="homegridtext">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="homegridimage">
        <item name="android:gravity"></item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="headingfonts">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="fonts">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
    </style>


    // Progress Bar
    <style name="progrssBarstyle" >

        <item name="colorAccent">@color/white</item>
        <item name="progress_current">@color/white</item>
        <item name="progress_reached_color">@color/white</item>
        <item name="progress_max">@color/white</item>

    </style>
</resources>